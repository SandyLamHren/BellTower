<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowAnimationStyle">@style/BaseAnimation</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- 首页 MaterialVp  Base application theme. -->
    <style name="AppThemeMain" parent="AppBaseTheme">

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>

        <!-- Material Theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:statusBarColor" tools:targetApi="21">@color/statusBarColor</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/navigationBarColor
        </item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/drawerArrowColor</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 默认动画 -->
    <style name="BaseAnimation" parent="@android:style/Theme">
        <item name="android:activityOpenEnterAnimation">@anim/a_to_b_of_out</item>
        <item name="android:activityOpenExitAnimation">@anim/a_to_b_of_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/a_back_b_of_out</item>
        <item name="android:activityCloseExitAnimation">@anim/a_back_b_of_in</item>
    </style>

    <!-- toolbar标题样式 -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 背景透明Dialog -->
    <style name="transparent_dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--dialog 背景不变暗-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item><!--activity不变暗-->
    </style>


    <style name="bar_center_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="lg_txt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:paddingLeft">70dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_num3</item>
    </style>

    <style name="lg_edit">
        <item name="android:textSize">@dimen/font_num4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">55dp</item>
        <item name="android:layout_marginRight">55dp</item>
        <item name="android:background">@drawable/sel_lg_edit</item>
    </style>

    <style name="drawer_item">
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/leftmenu_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>


    <!-- CollapsingToolbarLayout txt style -->
    <style name="col_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_num5</item>
    </style>

    <style name="exp_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_num6</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
